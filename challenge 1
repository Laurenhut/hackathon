count =0
n =1
counter=0
number=1
greatest_recur=0
greatest_num=0



for n in range (1000000): 
	count=number
	counter=0
	while count != 1:
		if count %2==0: 
			count=count/2
			counter=counter+1
		elif count%2==1: 
			count=(3*count)+1
			counter+=1
	if number %1000 ==0:
		print number
	if greatest_recur <counter:
		greatest_recur =counter
		greatest_num=number

	number+=1
	
print greatest_recur
print greatest_num
			
	
